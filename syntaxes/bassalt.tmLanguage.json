
{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bassalt",
	"patterns":
	[
		{
			"include": "#main"
		}
	],
	"repository":
	{
		"main":
		{
			"name": "source.bassalt",
			"patterns":
			[
				{ "include": "#normal_tokens" },
				
				{ "include": "#labels" },
				{ "include": "#types" },
				{ "include": "#subordinate_keywords_sweep" },
				{ "include": "#unit_headers" },
				{ "include": "#namespace_resolution" },
				{ "include": "#functions" },
				{ "include": "#variables" }
			]
		},
		"normal_tokens":
		{
			"patterns":
			[
				{ "include": "#comments" },
				{ "include": "#directives" },
				{ "include": "#strings" },
				{ "include": "#numbers" },
				{ "include": "#keywords" }
			]
		},

		"comments":
		{
			"patterns":
			[
				{
					"name": "comment.line.bassalt",
					"match": "//.*"
				},
				{
					"name": "comment.block.bassalt",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "invalid.bassalt",
					"match": "^.*(?=\\/\\/\\s*Illegal)"
				}
			]
		},
		"directives":
		{
			"patterns":
			[
				{
					"name": "meta.preprocessor.bassalt",
					"match": "(?<=^\\s*)#.*#"
				},
				{
					"name": "meta.type.annotation.bassalt",
					"begin": "(?<=^\\s*)#\\[",
					"end": "\\]#"
				}
			]
		},
		"strings":
		{
			"patterns":
			[
				{
					"name": "string.quoted.double.bassalt",
					"begin": "\"",
					"end": "\"",
					"patterns":
					[
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.bassalt",
					"begin": "(r)\"",
					"end": "\"",
					"captures":
					{
						"1": { "name": "meta.encoding.bassalt" }
					}
				},
				{
					"name": "string.quoted.double.bassalt",
					"begin": "(v)\"",
					"end": "\"",
					"captures":
					{
						"1": { "name": "meta.encoding.bassalt" }
					}
				},
				{
					"name": "string.quoted.double.bassalt",
					"begin": "(?:(f)|\\$)\"",
					"end": "\"",
					"captures":
					{
						"1": { "name": "meta.encoding.bassalt" }
					},
					"patterns":
					[
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\\\."
						},
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\{\\{|\\}\\}"
						},
						{
							"name": "meta.embedded",
							"begin": "{",
							"end": "}",
							"patterns":
							[
								{
									"include": "#main"
								}
							]
						}
					]
				},
				{
					"name": "constant.character.bassalt",
					"begin": "'",
					"end": "'(\\w+\\b)?",
					"patterns":
					[
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\\\."
						}
					],
					"captures":
					{
						"1": { "name": "constant.suffix.bassalt" }
					}
				}
			]
		},
		"numbers":
		{
			"patterns":
			[
				{
					"match": "(?<=[a-zA-Z_]\\w*\\.([0-9]\\.)*)[0-9]+",
					"name": "variable.other.bassalt"
				},

				{
					"name": "constant.numeric.hex.bassalt",
					"match": "(\\B-)?\\b0x\\h+(\\w+)?\\b",
					"captures":
					{
						"2": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.decimal.bassalt",
					"match": "(\\B-)?\\b\\d+(\\.\\d+)?(e|E)(\\+|\\-)?\\d+(\\w+)?\\b",
					"captures":
					{
						"5": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.decimal.bassalt",
					"match": "(\\B-)?\\b\\d+(\\.\\d+)?(\\w+)?\\b",
					"captures":
					{
						"3": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.octal.bassalt",
					"match": "(\\B-)?\\b0o[0-7]+(\\w+)?\\b",
					"captures":
					{
						"2": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.binary.bassalt",
					"match": "(\\B-)?\\b0b[01]+(\\w+)?\\b",
					"captures":
					{
						"2": { "name": "constant.suffix.bassalt" }
					}
				}
			]
		},
		"keywords":
		{
			"patterns":
			[
				{
					"name": "keyword.control.bassalt",
					"match": "\\b(if|else|loop|while|do|for|break|continue|in|switch|case|return)\\b"
				},
				{
					"name": "keyword.other.bassalt",
					"match": "\\b(is|via|with|using|as)\\b"
				},
				{
					"name": "keyword.operator.bassalt",
					"match": "\\b(assert|throw|sizeof|typeof|bitcast|ref|new|rnew|snew|rrealloc|rfree|cede|clone|move|equals)\\b"
				},

				{
					"name": "storage.type.bassalt",
					"match": "\\b(module|interface|class|struct|enum|face|program|namespace|singleton)\\b"
				},
				{
					"name": "storage.modifier.bassalt",
					"match": "\\b(public|private|protected|portable|abstract|virtual|implement|override|operator|unsafe|extern|const)\\b"
				},
				{
					"begin": "(?<=\\b(?:public|private|protected)\\b\\s*)(\\{)",
					"end": "(\\})",
					"captures":
					{
						"1": { "name": "storage.modifier.bassalt" },
						"2": { "name": "storage.modifier.bassalt" }
					},
					"patterns":
					[
						{
							"name": "storage.modifier.bassalt",
							"match": "\\b(get|set)\\b|,"
						}
					]
				},

				{
					"name": "constant.language.bassalt",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name": "variable.language.bassalt",
					"match": "\\b(this|base|stdout|stdin|stderr)\\b"
				},

				{
					"name": "keyword.macro.c.bassalt",
					"match": "\\$(\\w+\\b|\\*)"
				},
				{
					"name": "keyword.other.bassalt",
					"match": "\\b(placeholder)\\b"
				}
			]
		},
		"subordinate_keywords_sweep":
		{
			"patterns":
			[
				{
					"name": "variable.language.bassalt",
					"match": "\\b(void)\\b"
				},

				{
					"name": "keyword.bassalt",
					"match": "\\b(func|sptr|wptr|gptr)\\b"
				},
				{
					"name": "keyword.bassalt",
					"match": "\\b(bool|char|char8|char16|char32|sbyte|short|int|long|byte|ushort|uint|ulong|float|double)\\b"
				},
				{
					"name": "keyword.bassalt",
					"match": "\\b(string|int128|uint128|int256|uint256|float128|rgba|datetime)\\b"
				}
			]
		},

		"labels":
		{
			"patterns":
			[
				{
					"name": "entity.name.label.bassalt",
					"match": "(?<=\\b(if|else|loop|while|do|for|switch|case)\\b\\s*)\\:\\w+"
				},
				{
					"name": "entity.name.label.bassalt",
					"match": "^\\s*\\:\\w+"
				},
				{
					"name": "entity.name.label.call.bassalt",
					"match": "(?<=\\b(break|continue)\\b\\s*)\\b\\w+\\b"
				}
			]
		},

		"type_expr":
		{
			"patterns":
			[
				{
					"begin": "(\\[)",
					"end": "(\\])",
					"captures":
					{
						"1": { "name": "storage.modifier.array" },
						"2": { "name": "storage.modifier.array" }
					},
					"patterns":
					[
						{ "include": "#main" }
					]
				},
				{
					"name": "storage.modifier.pointer.bassalt",
					"match": "[\\&\\^\\*]"
				},
				{
					"name": "storage.modifier.face.bassalt",
					"match": "\\!|\\~(\\w+\\:\\:)*\\w+"
				},
				{ "include": "#namespace_resolution" },
				{
					"name": "entity.name.type.bassalt",
					"match": "\\w+"
				}
			]
		},
		"types":
		{
			"patterns":
			[
				{ "include": "#types__var_or_func_declaration" },
				{ "include": "#types__templates" },
				{ "include": "#types__unit_headers" }
			]
		},
		"types__var_or_func_declaration":
		{
			"patterns":
			[
				{
					"begin": "(?<=(^|\\-\\>|\\(|\\{|\\,|\\b(public|private|protected)\\b\\{.*\\}|\\b(if|else|loop|while|do|for|in|switch|case|public|private|protected|portable|abstract|virtual|unsafe|extern|const)\\b)\\s*)(?=((\\w+\\:\\:)*\\w+(\\<[\\w0-9\\s\\(\\)\\<\\>\\[\\]\\&\\^\\*\\!\\~\\,]*\\>)?|\\(.*\\))(\\[.*\\]|\\&|\\^|\\*|\\!|\\~(\\w+\\:\\:)*\\w+)*\\s+\\w+)",
					"end": "(?<=(^|\\-\\>|\\(|\\{|\\,|\\b(public|private|protected)\\b\\{.*\\}|\\b(if|else|loop|while|do|for|in|switch|case|public|private|protected|portable|abstract|virtual|unsafe|extern|const)\\b)\\s*((\\w+\\:\\:)*\\w+(\\<[\\w0-9\\s\\(\\)\\<\\>\\[\\]\\&\\^\\*\\!\\~\\,]*\\>)?|\\(.*\\))(\\[.*\\]|\\&|\\^|\\*|\\!|\\~(\\w+\\:\\:)*\\w+)*)(?=\\s+\\w+)",
					"name": "meta.type.bassalt",
					"patterns":
					[
						{ "include": "#normal_tokens" },

						{ "include": "#type_expr" }
					]
				}
			]
		},
		"types__templates":
		{
			"patterns":
			[
				{
					"begin": "(?<=\\b(\\w+\\:\\:)*\\w+\\b\\s*)\\<(?=[\\w\\s\\(\\)\\<\\>\\[\\]\\&\\^\\*\\!\\~\\,]*\\>)",
					"end": "\\>",
					"patterns":
					[
						{ "include": "#normal_tokens" },

						{
							"name": "storage.type.bassalt",
							"match": "\\b(type)\\b"
						},
						{
							"name": "storage.type.bassalt",
							"match": "\\b(portable|primitive)\\b"
						},
						{ "include": "#type_expr" }
					]
				}
			]
		},
		"types__unit_headers":
		{
			"patterns":
			[
				{
					"begin": "(?<=\\b(module|interface|class|struct|enum|face|program|namespace|singleton)\\b\\s+\\w+(\\<[\\w0-9\\s\\(\\)\\<\\>\\[\\]\\&\\^\\*\\!\\~\\,]*\\>)?\\s*\\:\\s*)(?!\\:)",
					"end": "(?=\\{)",
					"patterns":
					[
						{ "include": "#normal_tokens" },

						{ "include": "#type_expr" }
					]
				}
			]
		},

		"unit_headers":
		{
			"patterns":
			[
				{
					"name": "entity.name.type.bassalt",
					"match": "(?<=\\b(interface|class|struct|enum)\\b\\s*)\\b\\w+\\b"
				},
				{
					"name": "entity.name.section.bassalt",
					"match": "(?<=\\b(module|program|singleton)\\b\\s*)\\b\\w+\\b"
				},
				{
					"name": "entity.name.namespace.bassalt",
					"match": "(?<=\\b(namespace)\\b\\s*)\\b\\w+\\b"
				}
			]
		},
		"namespace_resolution":
		{
			"patterns":
			[
				{
					"name": "entity.name.scope-resolution.bassalt",
					"match": "\\b\\w+\\b(?=\\:\\:\\b\\w+\\b)"
				}
			]
		},
		"functions":
		{
			"patterns":
			[
				{
					"name": "entity.name.function.bassalt",
					"match": "\\b\\w+\\b(?=\\s*(\\<.*\\>)?\\s*\\(.*\\))"
				}
			]
		},
		"variables":
		{
			"patterns":
			[
				{
					"name": "entity.name.variable.bassalt",
					"match": "\\b\\w+\\b"
				}
			]
		}
	},
	"scopeName": "source.bassalt"
}
