
{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bassalt",
	"patterns": [
		{ "include": "#main" }
	],
	"repository": {
		"main": {
			"patterns": [
				{ "include": "#comments" }
			],
			"repository": {
				"comments": {
					"patterns": [
						{
							"match": "//.*",
							"name": "comment.line.bassalt"
						},
						{
							"begin": "/\\*",
							"end": "\\*/",
							"name": "comment.block.bassalt",
							"patterns": [
								{
									"match": ".*(?=\\*/)",
									"name": "invalid.bassalt"
								}
							]
						}
					]
				}
			}
		}
	},
	"scopeName": "source.bassalt"
}
