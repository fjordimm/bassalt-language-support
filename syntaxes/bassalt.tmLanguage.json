
{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bassalt",
	"patterns":
	[
		{
			"include": "#main"
		}
	],
	"repository":
	{
		"main":
		{
			"name": "source.bassalt",
			"patterns":
			[
				{ "include": "#comments" },
				{ "include": "#preprocessordirectives" },
				{ "include": "#strings" },
				{ "include": "#numbers" },
				{ "include": "#keywords" },
				{ "include": "#primitives" },
				{ "include": "#labels" },
				{ "include": "#clienttypes" },
				{ "include": "#variables" }
			]
		},

		"comments":
		{
			"patterns":
			[
				{
					"name": "comment.line.bassalt",
					"match": "//.*"
				},
				{
					"name": "comment.block.bassalt",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "invalid.bassalt",
					"match": "^.*(?=\\/\\/\\s*Illegal)"
				}
			]
		},
		"preprocessordirectives":
		{
			"patterns":
			[
				{
					"name": "meta.preprocessor.bassalt",
					"match": "(?<=^\\s*)#.*#"
				},
				{
					"name": "meta.type.annotation.bassalt",
					"begin": "(?<=^\\s*)#\\[",
					"end": "\\]#"
				}
			]
		},
		"strings":
		{
			"patterns":
			[
				{
					"name": "string.quoted.double.bassalt",
					"begin": "\"",
					"end": "\"",
					"patterns":
					[
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.bassalt",
					"begin": "(r)\"",
					"end": "\"",
					"captures":
					{
						"1": { "name": "meta.encoding.bassalt" }
					}
				},
				{
					"name": "string.quoted.double.bassalt",
					"begin": "(v)\"",
					"end": "\"",
					"captures":
					{
						"1": { "name": "meta.encoding.bassalt" }
					}
				},
				{
					"name": "string.quoted.double.bassalt",
					"begin": "(?:(f)|\\$)\"",
					"end": "\"",
					"captures":
					{
						"1": { "name": "meta.encoding.bassalt" }
					},
					"patterns":
					[
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\\\."
						},
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\{\\{|\\}\\}"
						},
						{
							"name": "meta.embedded",
							"begin": "{",
							"end": "}",
							"patterns":
							[
								{
									"include": "#main"
								}
							]
						}
					]
				},
				{
					"name": "constant.character.bassalt",
					"begin": "'",
					"end": "'(\\w+\\b)?",
					"patterns":
					[
						{
							"name": "constant.character.escape.bassalt",
							"match": "\\\\."
						}
					],
					"captures":
					{
						"1": { "name": "constant.suffix.bassalt" }
					}
				}
			]
		},
		"numbers":
		{
			"patterns":
			[
				{
					"match": "(?<=[a-zA-Z_]\\w*\\.([0-9]\\.)*)[0-9]+",
					"name": "variable.other.bassalt"
				},

				{
					"name": "constant.numeric.hex.bassalt",
					"match": "(\\B-)?\\b0x\\h+(\\w+)?\\b",
					"captures":
					{
						"2": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.decimal.bassalt",
					"match": "(\\B-)?\\b\\d+(\\.\\d+)?(e|E)(\\+|\\-)?\\d+(\\w+)?\\b",
					"captures":
					{
						"5": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.decimal.bassalt",
					"match": "(\\B-)?\\b\\d+(\\.\\d+)?(\\w+)?\\b",
					"captures":
					{
						"3": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.octal.bassalt",
					"match": "(\\B-)?\\b0o[0-7]+(\\w+)?\\b",
					"captures":
					{
						"2": { "name": "constant.suffix.bassalt" }
					}
				},
				{
					"name": "constant.numeric.binary.bassalt",
					"match": "(\\B-)?\\b0b[01]+(\\w+)?\\b",
					"captures":
					{
						"2": { "name": "constant.suffix.bassalt" }
					}
				}
			]
		},
		"keywords":
		{
			"patterns":
			[
				{
					"name": "keyword.control.bassalt",
					"match": "\\b(if|else|loop|while|do|for|break|continue|in|switch|case|return)\\b"
				},
				{
					"name": "keyword.other.bassalt",
					"match": "\\b(is|via|with|using|as)\\b"
				},

				{
					"name": "keyword.operator.bassalt",
					"match": "\\b(assert|throw|sizeof|typeof|bitcast|ref|new|rnew|snew|rrealloc|rfree|cede|copy|equals)\\b"
				},
				{
					"name": "keyword.operator.bassalt",
					"match": "\\b(sptr|wptr|gptr)\\b(?=\\s*\\()"
				},

				{
					"name": "storage.type.bassalt",
					"match": "\\b(module|interface|class|struct|enum|face|program|namespace|singleton)\\b"
				},
				{
					"name": "storage.modifier.bassalt",
					"match": "\\b(public|private|protected|portable|abstract|virtual|implement|override|operator|unsafe|extern|const)\\b"
				},
				{
					"begin": "(?<=\\b(?:public|private|protected)\\b\\s*)(\\{)",
					"end": "(\\})",
					"captures":
					{
						"1": { "name": "storage.modifier.bassalt" },
						"2": { "name": "storage.modifier.bassalt" }
					},
					"patterns":
					[
						{
							"name": "storage.modifier.bassalt",
							"match": "\\b(get|set)\\b|,"
						}
					]
				},

				{
					"name": "constant.language.bassalt",
					"match": "\\b(true|false|null)\\b"
				},
				{
					"name": "variable.language.bassalt",
					"match": "\\b(this|base|stdout|stdin|stderr)\\b"
				},

				{
					"name": "keyword.macro.c.bassalt",
					"match": "\\$(\\w+\\b|\\*)"
				},
				{
					"name": "keyword.other.bassalt",
					"match": "\\b(placeholder)\\b"
				},

				{
					"name": "storage.type.builtin.bassalt",
					"match": "\\b(void|func|sptr|wptr|gptr)\\b"
				}
			]
		},
		"primitives":
		{
			"patterns":
			[
				{
					"name": "storage.type.primitive.bassalt",
					"match": "\\b(void|bool|char|char8|char16|char32|sbyte|short|int|long|byte|ushort|uint|ulong|float|double)\\b"
				},
				{
					"name": "storage.type.reference.bassalt",
					"match": "\\b(string|int128|uint128|int256|uint256|float128|rgba|datetime)\\b"
				}
			]
		},

		"labels":
		{
			"patterns":
			[
				{
					"name": "entity.name.label.bassalt",
					"match": "(?<=\\b(if|else|loop|while|do|for|switch|case)\\b\\s*)\\:\\w+"
				},
				{
					"name": "entity.name.label.bassalt",
					"match": "^\\s*\\:\\w+"
				},
				{
					"name": "entity.name.label.call.bassalt",
					"match": "(?<=\\b(break|continue)\\b\\s*)\\b\\w+\\b"
				}
			]
		},

		"clienttype":
		{
			"patterns":
			[
				{
					"name": "entity.name.type",
					"match": "\\b\\w+\\b"
				}
			]
		},
		"clienttypes":
		{
			"patterns":
			[
				{
					"begin": ".(?=.*\\s+\\b\\w+\\b)",
					"end": ".(?=\\s+\\b\\w+\\b)",
					"name": "entity.name.type"
				}
			]
		},
		"variables":
		{
			"patterns":
			[
				{
					"name": "entity.name.variable.bassalt",
					"match": "\\b\\w+\\b"
				}
			]
		}
	},
	"scopeName": "source.bassalt"
}
